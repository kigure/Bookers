<p></p>
<h1 class="index-h1">Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |b| %>
    
    <tr>
    <td><%= b.title %></td>
    <td><%= b.body %></td>
    <td><%= link_to "Show", book_path(b.id) %></td>
    <td><%= link_to "Edit", edit_book_path(b.id) %></td>
    <td><%= link_to "Destroy", book_path(b.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
    </tr>
    <% end %>
  </tbody>
</table>


<h2 class="new-books">New Books</h2>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with model: Book.new do |f| %>

<div class="field">
<h4>Title</h4>
<%= f.text_field :title %>
</div>

<div class="field">
<h4>Body</h4>
<%= f.text_area :body %>
</div>
<%= f.submit 'Create Book' %>
<% end %>

